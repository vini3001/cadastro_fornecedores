@model cad_cliente.Models.Client
@{
    ViewData["Title"] = "Home";
}

<h1>Seja bem-vindo ao sistema Reges Supplier</h1>

<hr />

<h2>Criação de Fornecedor</h2>

<p>
    <a class="btn btn-success" asp-action="Create">Adicionar Fornecedor</a>
</p>

<h2>Consulta</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Consult">
            <div class="form-group">
                <label class="control-label">Nome do Fornecedor</label>
                <input asp-for="SocialReason" class="form-control" />
            </div>

            <div class="form-group" style="padding-top:10px">
                <input type="submit" value="Consultar" class="btn btn-primary btn-sm" />
            </div>
        </form>
    </div>
</div>
@model cad_cliente.Models.Client
@{
    ViewData["Title"] = "Deleta o fornecedor";
}

<h1>Deleta o Fornecedor</h1>

<h3>Você tem certeza que deseja excluir o registro do fornecedor?</h3>
<div>
    <h4>Fornecedor</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Razão Social
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SocialReason)
        </dd>
        <dt class="col-sm-2">
            Nome Fantasia
        </dt>
        <dd class="col-sm-2">
            @Html.DisplayFor(model => model.FantasyName)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="apagar" class="btn btn-danger btn-sm" />
        <a class="btn btn-secondary text-white btn-sm" asp-action="Index">Voltar</a>
    </form>
</div>
